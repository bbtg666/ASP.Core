@using Microsoft.AspNetCore.Identity
@using EF.RazorPage.Models
@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager


<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
         <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
               Xin chào @userManager.GetUserName(User)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Đăng xuất</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng kí</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }

</ul>