@page
@model EF.RazorPage.Pages_Blog.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<h1>Danh sách bài viết</h1>
<form>
    <div class="input-group">
        <div class="form-outline">
            <input type="search" id="searchString" class="form-control" name="searchString"/>
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </div>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
            <tr>
                <td>@(++i)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Chi tiết</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    PagingModel pagingModel = new PagingModel(){
        currentPage = Model.currentPage,
        countPages = Model.countPages,
        generateUrl = (int? p) => Url.Page("/Blog/Index", new {p})
    };
}
<partial name="_Pagination" model="@pagingModel"/>